                                    </dg:DataGridColumn.FormattedTitle>

                                    <dg:DataGridColumn.CellTemplate>
                                        <DataTemplate>
                                            <ContentView HorizontalOptions="Fill"  VerticalOptions="Fill"  BackgroundColor ="Transparent">
                                                <Label Text="{Binding }" Style="{StaticResource LabelStyle}" />
                                            </ContentView>
                                        </DataTemplate>
                                    </dg:DataGridColumn.CellTemplate>

                                </dg:DataGridColumn>

